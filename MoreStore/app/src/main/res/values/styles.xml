<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="regular_16">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            @color/gray2
        </item>

        <item name="android:fontFamily">
            @font/manrope_regular
        </item>

    </style>


    <style name="bold_20">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            @color/black
        </item>

        <item name="android:fontFamily">
            @font/manrope_bold
        </item>

        <item name="android:lineSpacingExtra">
            3sp
        </item>

    </style>



    <style name="mobile">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:textColor">
            @color/green5
        </item>

        <item name="android:fontFamily">
            @font/manrope_semibold
        </item>

    </style>

    <style name="bold_16">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            @color/black
        </item>



        <item name="android:fontFamily">
            @font/manrope_bold
        </item>

    </style>

    <style name="regular_14">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            @color/black
        </item>

        <item name="android:fontFamily">
            @font/manrope_regular
        </item>

        <item name="android:lineSpacingExtra">3sp</item>

    </style>

    <style name="medium_16">

    <item name="android:fontFamily">@font/manrope_medium</item>

    <item name="android:textSize">16sp</item>

</style>


    <style name="info_card">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/green2</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/green4</item>
    </style>


    <style name="buttonText">

    <item name="android:fontFamily">@font/manrope_bold</item>

    <item name="android:textSize">16sp</item>

    <item name="android:textColor">@color/white</item>

</style>


    <style name="buttonStyle">

        <item name="android:foreground">?attr/selectableItemBackground</item>


    <item name="android:background">@drawable/button</item>

    <item name="android:textAppearance">@style/buttonText</item>
        <item name="android:textColor">@color/white</item>


    <item name="textAllCaps">false</item>
    </style>

    <style name="buttonOutlinedStyle">

        <item name="android:foreground">?attr/selectableItemBackground</item>


        <item name="android:background">@drawable/outlined_button</item>

        <item name="android:textAppearance">@style/buttonText</item>
        <item name="android:textColor">@color/green</item>


        <item name="textAllCaps">false</item>
    </style>

    <style name="sizeCard">

    <item name="strokeWidth">1dp</item>

    <item name="strokeColor">@color/gray1</item>

    <item name="cardCornerRadius">4dp</item>

    <item name="android:gravity">center</item>

    <item name="android:layout_marginEnd">8dp</item>

    <item name="cardElevation">0dp</item>

</style>

    <style name="edit_text">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/regular_16</item>
        <item name="android:textColor">@color/black</item>
    </style>


<style name="semibold_14">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/manrope_semibold</item>
    <item name="android:lineSpacingExtra">3sp</item>
    <item name="android:textColor">@color/black</item>
</style>

    <style name="semibold_12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/manrope_semibold</item>
    </style>

    <style name="bold_24">
        <item name="android:textSize">24sp</item>
         <item name="android:fontFamily">@font/raleway_bold</item>
         <item name="android:fontFeatureSettings">pnum, lnum</item>
    </style>

    <style name="MoreStoreSearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_magnifying_glass</item>
    </style>

    <style name="bold_14">
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFeatureSettings">pnum, lnum</item>


    </style>

    <style name="App"/>
    <style name="App.Button"/>
    <style name="App.Button.Main" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/bg_rectangle_rounded4_black</item>
        <item name="android:backgroundTint">@color/enb_green_gray</item>
        <item name="android:textAppearance">@style/ManropeBold_16_white</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="App.Button.Main.Bottom" parent="App.Button.Main">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="App.Button.Second">

    </style>
    <style name="App.TextView"/>
    <style name="App.TextView.Title"/>
    <style name="App.TextView.Title.Field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
    </style>
    <style name="App.EditText"/>
    <style name="App.EditText.Field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/bg_rect_bordlight_round4</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

</resources>