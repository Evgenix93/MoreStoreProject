<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="regular_16">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            @color/gray2
        </item>

        <item name="android:fontFamily">
            @font/manrope_regular
        </item>

    </style>


    <style name="bold_20">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            @color/black
        </item>

        <item name="android:fontFamily">
            @font/manrope_bold
        </item>

        <item name="android:lineSpacingExtra">
            3sp
        </item>

    </style>

    <style name="mobile">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:textColor">
            @color/green5
        </item>

        <item name="android:fontFamily">
            @font/manrope_semibold
        </item>

    </style>

    <style name="bold_16">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            @color/black
        </item>

        <item name="android:lineSpacingExtra">
            2sp
        </item>

        <item name="android:fontFamily">
            @font/manrope_bold
        </item>

    </style>

    <style name="regular_14">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            @color/black
        </item>

        <item name="android:fontFamily">
            @font/manrope_regular
        </item>

        <item name="android:lineSpacingExtra">3sp</item>

    </style>


    <style name="info_card">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/green2</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/green4</item>
    </style>


</resources>