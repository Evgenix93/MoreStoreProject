<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText android:id="@+id/addressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp"
        android:background="@drawable/bg_rect_borddark_round4"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="9dp"
        android:paddingHorizontal="12dp"
        android:textSize="14sp"
        android:textAppearance="@style/ManropeReg_14_black"
        tools:text="ул. Большая Ордынка, 41"
        />

    <androidx.recyclerview.widget.RecyclerView android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        app:layout_scrollFlags="scroll"
        />

</merge>