<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rectangle_roundtop12"
    android:padding="16dp"
    tools:layout_gravity="bottom">

    <TextView
        android:id="@+id/ynDIalogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/setDiscount_title"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ynDialogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:fontFamily="@font/manrope_regular"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ynDIalogTitle"
        tools:text="DialogSubtitle" />

    <TextView
        android:id="@+id/ynDIalogYesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_rectangle_rounded4_bordergray"
        android:backgroundTint="@color/enb_green_gray"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/manrope_bold"
        android:layout_marginTop="24dp"
        android:paddingVertical="12dp"
        android:text="@string/yes_small"
        app:layout_constraintTop_toBottomOf="@+id/ynDialogContent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ynDIalogNoBtn"
        style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/outlined_button2"
        android:text="@string/no"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/ynDIalogYesBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>