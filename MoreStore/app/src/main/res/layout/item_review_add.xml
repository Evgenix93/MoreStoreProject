<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    >
    <!--todo simplify: make flat-->

    <com.google.android.material.card.MaterialCardView android:id="@+id/writeReviewCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/green"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="7dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pen"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="35.5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reviews_create"
                android:textSize="16sp"
                android:fontFamily="@font/manrope_bold"
                android:textColor="@color/green"
                android:paddingVertical="11.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32.5dp"
                android:layout_marginStart="11.03dp"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>