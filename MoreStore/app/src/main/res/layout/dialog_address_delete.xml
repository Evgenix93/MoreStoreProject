<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rectangle_green_rounded8"
    android:backgroundTint="@color/white"
    android:padding="16dp">
    <!--fixme replace all background rounded rectangles by material views-->

    <TextView android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/ManropeBold_16_black"
        android:textSize="20sp"
        android:text="@string/myAddress_delete_title"
        />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_cross"
        app:tint="@color/gray2"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="24dp"
        android:text="@string/myAddress_delete_message"
        android:textAppearance="@style/ManropeReg_14_black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_below="@id/message"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:textAppearance="@style/ManropeBold_16_white"
            android:text="@string/myAddress_delete_confirm"
            app:cornerRadius="4dp"
            app:backgroundTint="@color/red"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textAppearance="@style/ManropeReg_16_black"
            android:text="@string/myAddress_delete_cancel"
            android:textColor="@color/black"
            app:cornerRadius="4dp"
            app:backgroundTint="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            />
    </LinearLayout>


</RelativeLayout>