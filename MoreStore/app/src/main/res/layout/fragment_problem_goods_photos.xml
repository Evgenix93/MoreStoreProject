<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_simple" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/problemGoodsPhotosDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_regular"
                android:paddingStart="0dp"
                android:paddingEnd="10dp"
                android:text="@string/order_problem_photos_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/problemGoodsPhotosImageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/problemGoodsPhotosDescription">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/problemGoodsPhotosAddFirstCard"
                    android:layout_width="166dp"
                    android:layout_height="160dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/problemGoodsPhotosAddSecondCard"
                    app:layout_constraintHorizontal_bias="0.68"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/gray1"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="53dp"
                        android:src="@drawable/ic_camera_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="89dp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="@string/order_problem_photos_add"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/problemGoodsPhotosAddFirstPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/problemGoodsPhotosAddSecondCard"
                    android:layout_width="166dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="10dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/problemGoodsPhotosAddFirstCard"
                    app:layout_constraintTop_toTopOf="@+id/problemGoodsPhotosAddFirstCard"
                    app:strokeColor="@color/gray1"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="53dp"
                        android:src="@drawable/ic_camera_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="89dp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="@string/order_problem_photos_add"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/problemGoodsPhotosAddSecondPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/problemGoodsPhotosAddThirdCard"
                    android:layout_width="166dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="8dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/problemGoodsPhotosAddFirstCard"
                    app:layout_constraintStart_toStartOf="@+id/problemGoodsPhotosAddFirstCard"
                    app:layout_constraintTop_toBottomOf="@+id/problemGoodsPhotosAddFirstCard"
                    app:strokeColor="@color/gray1"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="53dp"
                        android:src="@drawable/ic_camera_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="89dp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="@string/order_problem_photos_add"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/problemGoodsPhotosAddThirdPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/problemGoodsPhotosAddForthCard"
                    android:layout_width="166dp"
                    android:layout_height="160dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/problemGoodsPhotosAddSecondCard"
                    app:layout_constraintStart_toStartOf="@+id/problemGoodsPhotosAddSecondCard"
                    app:layout_constraintTop_toTopOf="@+id/problemGoodsPhotosAddThirdCard"
                    app:strokeColor="@color/gray1"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="53dp"
                        android:src="@drawable/ic_camera_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="89dp"
                        android:fontFamily="@font/manrope_semibold"
                        android:text="@string/order_problem_photos_add"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/problemGoodsPhotosAddForthPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/problemGoodsPhotosNext"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/order_problem_photos_complete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/problemGoodsPhotosDescription"
                app:layout_constraintStart_toStartOf="@+id/problemGoodsPhotosDescription" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
