<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray3">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/writeReviewCardView"
        android:layout_width="224dp"
        android:layout_height="46dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/green"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Написать отзыв"
            android:textAppearance="@style/bold_16"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pen"
            android:layout_gravity="center"
            android:layout_marginEnd="70dp"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        app:layout_constraintTop_toBottomOf="@+id/writeReviewCardView"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/review_avatar"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Иван Д."
          android:fontFamily="@font/manrope_bold"
          android:textSize="14sp"
          android:textColor="@color/black"
          android:layout_marginStart="60dp"
          android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 неделю назад"
            android:textAppearance="@style/regular_14"
            android:textColor="@color/gray2"
            android:layout_marginTop="37dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отличный продавец, хорошие предложения.\nВсем рекомендую!"
            android:layout_marginTop="103dp"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/regular_14"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_frame_159"
            android:layout_marginTop="71dp"
            android:layout_marginStart="10dp"/>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>